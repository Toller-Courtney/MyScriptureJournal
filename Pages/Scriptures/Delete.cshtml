@page "{id:int}"
@model MyScriptureJournal.Pages.Scriptures.DeleteModel

@{
    ViewData["Title"] = "Delete a Journal Entry";
}

<h1>Delete a Journal Entry</h1>

<h3>Are you sure you want to delete this Entry?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Chapter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Chapter)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.DateAdded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Book)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Notes)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Scripture.ID" />
        <input type="submit" value="Delete Entry" class="btn btn-danger" onclick=" return confirm('Are you sure you want to delete this entry?')" /> |
        <a asp-page="./Index">Back to Entries</a>
    </form>
</div>
